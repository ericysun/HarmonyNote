{
    "manifest_version": 3,
    "name": "Sticky Note Reminder",
    "version": "1.0",
    "description": "Add sticky notes with reminders in your browser.",
    "permissions": ["storage", "notifications", "alarms"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    }
  }